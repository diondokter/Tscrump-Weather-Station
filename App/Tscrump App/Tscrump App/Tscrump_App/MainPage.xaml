<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tscrump_App"
             x:Class="Tscrump_App.MainPage"
			 HeightRequest="100000000"
			 WidthRequest="100000000">
	
	<ScrollView>

		<StackLayout Spacing="5">

			<StackLayout BackgroundColor="#00CCBB" Padding="5">
				<Label Text="Tscrump Weather Station" FontSize="48" HorizontalTextAlignment="Center" TextColor="White"/>
				<Label Text="Make Weather Stations great again!" FontSize="24" HorizontalTextAlignment="Center" TextColor="White"/>
			</StackLayout>

			<Image x:Name="LogoImage" Aspect="AspectFit" HeightRequest="200" HorizontalOptions="Center"/>

			<Button BackgroundColor="#00CCBB" TextColor="White" Margin="5,0" Text="View Chart" Clicked="ViewChartButtonClicked"/>
			<Button BackgroundColor="#00CCBB" TextColor="White"  Margin="5,0" Text="View Website" Clicked="ViewWebsiteButtonClicked"/>
			<Button BackgroundColor="#00CCBB" TextColor="White"  Margin="5,0" Text="View Source" Clicked="ViewSourceButtonClicked"/>
		</StackLayout>

	</ScrollView>

</ContentPage>